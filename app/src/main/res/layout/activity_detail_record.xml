<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.DetailRecordActivity"
    android:padding="5dp"
    >

    <TextView
        android:id="@+id/textView_title"
        android:layout_width="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_height="30dp"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/btn_add_bg"
        android:layout_marginTop="5dp"
        android:paddingHorizontal="5dp"
        android:gravity="center_vertical"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/textView_title"
        android:id="@+id/textView_typeStr"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_margin="3dp"
        android:text="@string/type"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/textView_title"
        android:id="@+id/textView_typeName"
        app:layout_constraintLeft_toRightOf="@id/textView_typeStr"
        android:layout_margin="3dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBaseline_toBaselineOf="@id/textView_typeName"
        android:id="@+id/textView_time"
        app:layout_constraintRight_toRightOf="parent"
        />

    <ScrollView
        android:layout_width="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/textView_typeName"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@drawable/btn_add_bg"
        android:layout_marginVertical="10dp"
        android:paddingHorizontal="5dp"
        >
        <TextView
            android:id="@+id/textView_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            />
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>